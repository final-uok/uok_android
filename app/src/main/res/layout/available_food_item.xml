<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtName_availableFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:includeFontPadding="false"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/bold_medium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtFoodCode_availableFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtName_availableFood"
        android:includeFontPadding="false"
        android:text=""
        android:textSize="@dimen/bold_very_small"
        android:textAlignment="center"
        android:textColor="@color/foodCount" />

    <TextView
        android:id="@+id/txtPhoneNumber_availableFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtFoodCode_availableFood"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:includeFontPadding="false"
        android:text=""
        android:textAlignment="center"
        android:textColor="#808080"
        android:textSize="@dimen/regular"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txtTimestamp_availableFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPhoneNumber_availableFood"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:includeFontPadding="false"
        android:text=""
        android:textAlignment="center"
        android:textColor="#808080"
        android:textSize="@dimen/regular_small"
        android:textStyle="italic" />

</RelativeLayout>