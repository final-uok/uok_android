<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baseBackground"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:src="@drawable/ic_warning_green_24dp" />

    <TextView
        android:id="@+id/txtWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:includeFontPadding="false"
        android:text=""
        android:textAlignment="center"
        android:textColor="#111"
        android:textSize="@dimen/regular" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="18dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_addFood_warning_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="4dp"
            android:layout_weight="0.45"
            android:background="@drawable/custom_button"
            android:text="@string/add_food_warning_dialog_btn_ok"
            android:textColor="#fff"
            android:textSize="@dimen/regular" />

        <Button
            android:id="@+id/btn_addFood_warning_no"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:layout_weight="0.45"
            android:background="@drawable/custom_button"
            android:text="@string/add_food_warning_dialog_btn_no"
            android:textColor="#fff"
            android:textSize="@dimen/regular" />

    </LinearLayout>

</LinearLayout>